---
layout: views/content.njk
---

{% set postUrl = meta.url + page.outputPath | replace('dist/', '') | replace('index.html', '') %}

<h1>{{ title }}</h1>
<div class="post-meta">
  <div class="post-meta__group post-meta__group--info">
    {{ page.date | htmlTime('post-meta__item post-meta__item--date', true) | safe }}
    <span class="post-meta__item post-meta__item--date">{{ content | readingTime }}</span>
  </div>
  <div class="post-meta__group post-meta__group--ctas">
    <a class="post-meta__item" href="https://github.com/lennyanders/lenny.fyi/blob/master{{ page.inputPath | replace('./', '/') }}" target="_blank" rel="noopener noreferrer">
      edit
