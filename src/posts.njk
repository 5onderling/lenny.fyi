---
layout: views/base.njk
title: Blog
permalink: false
---

<div class="latest-posts">
  {%- for post in collections.post.reverse() %}
    <div>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
     {{ post.date | htmlTime | safe }}
      <p>
        {%- if post.data.excerpt -%}
          {{ post.data.excerpt | truncate(280) | trim }}
        {%- else -%}
          {{ post.templateContent | striptags(true) | replace(post.data.title, '') | truncate(280) | trim }}
        {%- endif -%}
      </p>
    </div>
  {%- endfor %}
</div>